# i3bar configuration
# Start i3bar to display a workspace bar with i3status
bar {
	workspace_buttons yes
	tray_output primary
	tray_padding 0
	position top
	status_command i3status

    colors {
        background $base00
        separator  $base07
        statusline $base07
        # State             Border  BG      Text
        focused_workspace   $base07 $base08 $base07
        active_workspace    $base07 $base08 $base07
        inactive_workspace  $base07 $base00 $base07
        urgent_workspace    $base07 $base07 $base00
        binding_mode        $base00 $base0a $base00
    }
}

