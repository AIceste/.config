	bindsym d exec "~/.scripts/pa_usesinkport.sh alsa_output.usb-Grace_Design_SDAC-00.analog-stereo analog-output" mode "default"
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+a mode "default"
}
bindsym $mod+a mode "audio-output-selection"

