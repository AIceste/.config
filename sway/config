# resize window (you can also use the mouse for that)
mode "resize" {
	# These bindings trigger as soon as you enter the resize mode

	# Pressing left will shrink the window’s width.
	# Pressing right will grow the window’s width.
	# Pressing up will shrink the window’s height.
	# Pressing down will grow the window’s height.
	bindsym h resize shrink width 6 px or 6 ppt
	bindsym k resize grow height 6 px or 6 ppt
	bindsym j resize shrink height 6 px or 6 ppt
	bindsym l resize grow width 6 px or 6 ppt

	# same bindings, but for the arrow keys
	bindsym Left resize shrink width 6 px or 6 ppt
	bindsym Down resize grow height 6 px or 6 ppt
	bindsym Up resize shrink height 6 px or 6 ppt
	bindsym Right resize grow width 6 px or 6 ppt

	# back to normal: Enter or Escape or $mod+r
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# Screenshot utilities
mode "screenshot-to-file" {
	# No one ever use "full screen"
	# No one ever use "current window"

	# Selection
	bindsym s exec "slurp -b 2a2a1169 | grim -g ~/images/captures/$(date +%Y-%m-%d_%H-%M-%S).png" ; mode "default"

	# back to normal: Enter or Escape or $mod+Print
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+Print mode "default"
}
bindsym $mod+Print mode "screenshot-to-file"

mode "screenshot-to-clipboard" {
	# No one ever use "full screen"
	# No one ever use "current window"

	# Selection
	bindsym s exec "slurp -b 2a2a1169 | grim -g - - | wl-copy -t image/png" ; mode "default"

	# back to normal: Enter or Escape or $mod+Print
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+Print mode "default"
}
bindsym Print mode "screenshot-to-clipboard"

mode "audio-output-config" {
	bindsym s exec "~/.config/scripts/aoutput_set.sh alsa_output.usb-Generic_USB_Audio-00.HiFi__hw_Audio__sink Speaker" ; mode "default"
	bindsym h exec "~/.config/scripts/aoutput_set.sh alsa_output.usb-Generic_USB_Audio-00.HiFi__hw_Audio_1__sink Headphones" ; mode "default"

	bindsym plus exec "pactl set-sink-volume @DEFAULT_SINK@ +4%"
	bindsym minus exec "pactl set-sink-volume @DEFAULT_SINK@ -4%"
	bindsym 0 exec "pactl set-sink-volume @DEFAULT_SINK@ 100%"
	# could consider mapping 1-0 to different volumes

	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+a mode "default"
}
bindsym $mod+a mode "audio-output-config"

